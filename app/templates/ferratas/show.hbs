<div class="ferrata">
  <h2>
    {{model.name}} [{{model.difficulty}}]
  </h2>
  <div class="comments">
    {{textarea  class='new-comment'
                placeholder='What you think about this ferrata?'
                value=newComment
                enter='createComment'}}

    {{#each model.comments key="id" as |comment|}}
      <div class="comments__entry">{{comment.text}} <span class="comments__meta">{{comment.user_name}} at {{comment.formattedDate}}</span></div>
    {{else}}
      Be the first to comment this ferrata!
    {{/each}}
  </div>

  <div class="ferrata__properties">
    <table class="ferrata__table">
      <tbody>
        <tr>
          <th>Time</th>
          <td>{{format-duration model.duration}}h</td>
          <th>Height</th>
          <td>{{model.height}}m</td>
        </tr>
        <tr>
          <th>State</th>
          <td>{{model.state}}</td>
          <th>Diff</th>
          <td>{{model.elevationdiff}}m</td>
        </tr>
        <tr>
          <th>Region</th>
          <td>{{model.region}}</td>
          <th>Lat</th>
          <td>{{format-coordinates model.lat}}</td>
        </tr>
        <tr>
          <th>Locality</th>
          <td>{{model.locality}}</td>
          <th>Lng</th>
          <td>{{format-coordinates model.lng}}</td>
        </tr>
        <tr>
          <th>From</th>
          <td>{{model.begin}}</td>
          <th>To</th>
          <td>{{model.target}}</td>
        </tr>

        <tr>
          <th>Source</th>
          <td colspan="3"><a href="http://klettersteig.de/klettersteig/{{model.link}}" target="_blank">See full description (klettersteig.de)</a></td>
        </tr>
      </tbody>
    </table>

  </div>

</div>
